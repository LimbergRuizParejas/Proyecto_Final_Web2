# ================================
# 🔧 Configuración general
# ================================

PORT=3000                     # Puerto donde correrá tu servidor Express

# ================================
# ⚙️ Configuración de la base de datos
# ================================

DB_NAME=Pokedex               # Nombre de la base de datos en PostgreSQL
DB_USER=postgres              # Usuario de PostgreSQL
DB_PASSWORD=root              # Contraseña del usuario
DB_HOST=localhost             # Host donde está el servidor PostgreSQL (usualmente localhost)

# ================================
# 🔑 Configuración JWT
# ================================

JWT_SECRET=clave_super_secreta # Clave secreta para firmar y verificar tokens JWT

# ================================
# 🛠 Configuración de desarrollo
# ================================

DB_ALTER=true                 # Si está en true, Sequelize sincroniza la DB con { alter: true }
